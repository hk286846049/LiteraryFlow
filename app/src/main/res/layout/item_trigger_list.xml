<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:src="@drawable/trigger"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/iv_trigger"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/tv_trigger_name"
        app:layout_constraintTop_toTopOf="@+id/iv_trigger"
        app:layout_constraintStart_toEndOf="@+id/iv_trigger"
        app:layout_constraintBottom_toBottomOf="@+id/iv_trigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_true"
        android:src="@drawable/iv_true"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_trigger"
        app:layout_constraintStart_toStartOf="@+id/iv_trigger"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/tv_true"
        app:layout_constraintTop_toTopOf="@+id/iv_true"
        app:layout_constraintStart_toEndOf="@+id/iv_true"
        app:layout_constraintBottom_toBottomOf="@+id/iv_true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_false"
        android:layout_marginTop="10dp"
        android:src="@drawable/iv_false"
        app:layout_constraintTop_toBottomOf="@+id/iv_true"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/tv_false"
        app:layout_constraintTop_toTopOf="@+id/iv_false"
        app:layout_constraintStart_toEndOf="@+id/iv_false"
        app:layout_constraintBottom_toBottomOf="@+id/iv_false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>