<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layout_click_xy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="X:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_x"
            android:inputType="number"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Y:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_y"
            android:inputType="number"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_min_max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_min"
            android:text="x最小值"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_min"
            android:inputType="number"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_max"
            android:text="x最大值"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_max"
            android:inputType="number"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            app:layout_constraintTop_toTopOf="@+id/et_find_text"
            app:layout_constraintBottom_toBottomOf="@+id/et_find_text"
            android:text="寻找屏幕中的文字："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_find_text"
            android:textSize="12sp"
            android:hint="输入任务名称"
            android:gravity="center_vertical"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_true"
            android:background="@color/material_blue_50"
            android:gravity="center"
            android:text="有："
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_find_text"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            app:layout_constraintTop_toTopOf="@+id/tv_true"
            app:layout_constraintStart_toEndOf="@+id/tv_true"
            app:layout_constraintBottom_toBottomOf="@+id/tv_true"
            android:id="@+id/tv_action_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="执行操作" />

        <TextView
            android:id="@+id/tv_false"
            android:background="@color/material_blue_50"
            android:gravity="center"
            android:text="无："
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_true"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            app:layout_constraintTop_toTopOf="@+id/tv_false"
            app:layout_constraintStart_toEndOf="@+id/tv_false"
            app:layout_constraintBottom_toBottomOf="@+id/tv_false"
            android:id="@+id/tv_action_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="执行操作" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>